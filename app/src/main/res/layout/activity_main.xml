<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/factsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Data"
        android:textColor="@color/black"
        android:textStyle="normal|italic"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/showFactsBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="Show Facts"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="@+id/factsText"
        app:layout_constraintStart_toStartOf="@+id/factsText"
        app:layout_constraintTop_toBottomOf="@+id/factsText" />
</androidx.constraintlayout.widget.ConstraintLayout>